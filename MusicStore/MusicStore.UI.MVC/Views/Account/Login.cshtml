@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Kullanıcı Giriş Ekranı</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <fieldset>
                            <p>
                                <label>Kullanıcı Adı:</label>
                                @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
                            </p>
                            <p>
                                <label>Password:</label>
                                @Html.TextBoxFor(a => a.Password, new { @class = "form-control" })
                            </p>
                          
                            <p>
                                <input type="submit" name="name" value="GİRİŞ YAP" class="btn btn-success" />
                            </p>
                        </fieldset>
                    }
                </div>
                <div class="panel-footer">
                    @if(ViewBag.Error != null)
                    {
                        <span>@ViewBag.Error</span>
                    }
                    @Html.ActionLink("Hesap Oluştur","Register","Account")
                </div>

            </div>
        </div>

    </div>
</div>






















